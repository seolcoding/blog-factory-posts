---
/**
 * HighlightBox - Colored callout boxes for important content
 *
 * @example
 * <HighlightBox type="info" title="Did you know?">
 *   Astro ships zero JavaScript by default.
 * </HighlightBox>
 *
 * <HighlightBox type="warning">
 *   This feature is deprecated and will be removed in v2.0
 * </HighlightBox>
 *
 * <HighlightBox type="tip" title="Pro Tip">
 *   Use keyboard shortcuts for faster navigation.
 * </HighlightBox>
 */

export interface Props {
  /** Type of callout */
  type?: "info" | "warning" | "success" | "tip";
  /** Optional title */
  title?: string;
  /** Whether to show the icon */
  showIcon?: boolean;
  /** Additional CSS classes */
  class?: string;
}

const {
  type = "info",
  title,
  showIcon = true,
  class: className = "",
} = Astro.props;

const typeStyles = {
  info: {
    container: "bg-info-bg border-info/30",
    icon: "text-info",
    title: "text-info",
    iconPath: "M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z",
  },
  warning: {
    container: "bg-warning-bg border-warning/30",
    icon: "text-warning",
    title: "text-warning",
    iconPath:
      "M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z",
  },
  success: {
    container: "bg-success-bg border-success/30",
    icon: "text-success",
    title: "text-success",
    iconPath: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
  },
  tip: {
    container: "bg-tip-bg border-tip/30",
    icon: "text-tip",
    title: "text-tip",
    iconPath:
      "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
  },
};

const styles = typeStyles[type];
---

<aside
  class:list={[
    "rounded-lg border-l-4 p-4 my-4",
    styles.container,
    className,
  ]}
  role="note"
  aria-label={type}
>
  <div class="flex gap-3">
    <!-- Icon -->
    {
      showIcon && (
        <div class:list={["flex-shrink-0 mt-0.5", styles.icon]}>
          <svg
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d={styles.iconPath}
            />
          </svg>
        </div>
      )
    }

    <div class="flex-1 min-w-0">
      <!-- Title -->
      {
        title && (
          <h5 class:list={["font-semibold mb-1", styles.title]}>
            {title}
          </h5>
        )
      }

      <!-- Content -->
      <div class="text-sm text-foreground/90 leading-relaxed [&>p]:m-0">
        <slot />
      </div>
    </div>
  </div>
</aside>
